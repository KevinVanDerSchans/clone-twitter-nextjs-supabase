{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@entities/*": ["src/domain/entities/*"],
      "@config/*": ["src/infrastructure/config/*"],
      "@layouts/*": ["src/presentation/layouts/*"],
      "@sharedHooks/*": ["src/shared/hooks/*"],
      "@sharedComponents/*": ["src/shared/components/*"],
      "@sharedTypes/*": ["src/shared/types/*"],
      "@constants/*": ["src/shared/constants/*"],
      "@context/*": ["src/shared/context/*"],
      "@errors/*": ["src/shared/errors/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@svgs/*": ["public/svgs/*"],
      "@styles/*": ["src/styles/*"],

      "@auth/*": ["src/presentation/features/auth/*"],
      "@tweets/*": ["src/presentation/features/tweets/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
